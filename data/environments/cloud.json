{
  "environment": "cloud",
  "description": "클라우드 연동 개발 환경 (Supabase + Railway + Render)",
  "site": {
    "id": "site-cloud-dev-0000-0000-0000-000000000001", 
    "name": "Figure MCP Cloud Dev",
    "company": "Figure MCP",
    "department": "개발팀",
    "business_type": "IT 서비스",
    "contact_person": "클라우드 관리자",
    "contact_email": "cloud@figure-mcp.dev",
    "description": "클라우드 서비스 연동 개발 환경",
    "url": "https://figure-office.vercel.app",
    "is_active": true,
    "settings": {
      "default_language": "ko",
      "timezone": "Asia/Seoul", 
      "date_format": "YYYY-MM-DD",
      "time_format": "HH:mm:ss",
      "log_level": "info",
      "enable_cors": true,
      "enable_swagger": true,
      "cdn_enabled": true,
      "ssl_enabled": true
    }
  },
  "database": {
    "type": "postgresql",
    "provider": "supabase",
    "host": "${SUPABASE_DB_HOST}",
    "port": 5432,
    "database": "${SUPABASE_DB_NAME}",
    "username": "${SUPABASE_DB_USER}",
    "password": "${SUPABASE_DB_PASSWORD}",
    "ssl_mode": "require",
    "auto_migrate": true,
    "seed_data": false,
    "connection_pool": {
      "min_size": 1,
      "max_size": 10,
      "timeout": 30
    }
  },
  "storage": {
    "provider": "supabase",
    "supabase_url": "${SUPABASE_URL}",
    "supabase_key": "${SUPABASE_SERVICE_ROLE_KEY}",
    "bucket_name": "figure-documents",
    "max_file_size": "10MB",
    "allowed_types": [".md", ".json", ".txt", ".pdf", ".docx"]
  },
  "redis": {
    "provider": "railway",
    "url": "${REDIS_URL}",
    "ssl": true,
    "db": 0,
    "connection_pool": {
      "max_connections": 20,
      "retry_on_timeout": true
    }
  },
  "chroma": {
    "provider": "render",
    "url": "${CHROMA_URL}",
    "collection_name": "figure_documents_dev",
    "ssl": true,
    "timeout": 30,
    "retry_attempts": 3
  },
  "features": {
    "template_caching": true,
    "auto_backup": true,
    "performance_monitoring": true,
    "error_reporting": true,
    "cdn_acceleration": true,
    "auto_scaling": true
  },
  "security": {
    "jwt_secret": "${JWT_SECRET}",
    "session_timeout": 7200,
    "rate_limiting": true,
    "cors_origins": [
      "https://figure-office.vercel.app",
      "https://figure-backend.railway.app"
    ],
    "ssl_required": true,
    "api_key_rotation": true
  },
  "monitoring": {
    "health_check_interval": 60,
    "metrics_collection": true,
    "error_tracking": true,
    "performance_alerts": true,
    "uptime_monitoring": true
  },
  "logging": {
    "level": "info",
    "provider": "cloud",
    "structured_logging": true,
    "log_aggregation": true,
    "retention_days": 30
  },
  "deployment": {
    "auto_deploy": true,
    "rollback_enabled": true,
    "health_checks": true,
    "zero_downtime": true
  },
  "metadata": {
    "created_at": "2025-09-25T00:00:00Z",
    "created_by": "system",
    "version": "2.0.0",
    "tags": ["cloud", "dev", "supabase", "railway", "render"],
    "cost_tracking": true,
    "backup_strategy": "automated"
  }
}
