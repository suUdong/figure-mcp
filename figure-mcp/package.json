{
  "name": "figure-mcp",
  "version": "2.0.0",
  "description": "Figure MCP Server - Simplified Impact Analysis Tool",
  "main": "dist/figure-mcp-server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/figure-mcp-server.js",
    "dev": "tsc && node dist/figure-mcp-server.js",
    "prepare": "npm run build",
    "test": "npm run test:all",
    "test:all": "./tests/scripts/test-runner.sh",
    "test:unit": "jest --config tests/setup/jest.config.js --testPathPattern=tests/unit",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:integration": "jest --config tests/setup/jest.config.js --testPathPattern=tests/integration --runInBand --forceExit",
    "test:e2e": "jest --config tests/setup/jest.config.js --testPathPattern=tests/e2e --runInBand --forceExit --testTimeout=60000",
    "test:ci": "npm run test:unit:coverage && npm run test:integration && npm run test:e2e",
    "test:template": "bash tests/scripts/template-request-test-runner.sh",
    "test:template:core": "jest --config tests/setup/jest.config.js --testPathPattern=template-request-core",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "figure",
    "impact-analysis",
    "development-standards"
  ],
  "author": "Figure Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.7.7",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.5.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.5.0"
  }
}
