# Figure Backend Environment Variables
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# App Configuration
FIGURE_APP_NAME="Figure Backend"
FIGURE_DEBUG=false
FIGURE_API_VERSION="v1"

# Server Configuration
FIGURE_HOST="0.0.0.0"
FIGURE_PORT=8001

# OpenAI Configuration (필수)
FIGURE_OPENAI_API_KEY="your-openai-api-key-here"
FIGURE_OPENAI_MODEL="gpt-4o-mini"
FIGURE_EMBEDDING_MODEL="text-embedding-3-small"

# ChromaDB Configuration
FIGURE_CHROMA_PERSIST_DIRECTORY="./data/chroma"
FIGURE_CHROMA_COLLECTION_NAME="figure_documents"

# JIRA Configuration (선택사항)
FIGURE_JIRA_SERVER="https://your-company.atlassian.net"
FIGURE_JIRA_EMAIL="your-email@company.com" 
FIGURE_JIRA_API_TOKEN="your-jira-api-token"

# Redis Configuration (선택사항)
FIGURE_REDIS_URL="redis://localhost:6379" 