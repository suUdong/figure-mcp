# Figure Backend Environment Variables
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요

# App Configuration
FIGURE_APP_NAME=Figure Backend
FIGURE_DEBUG=false
FIGURE_API_VERSION=v1

# Server Configuration
FIGURE_HOST=0.0.0.0
FIGURE_PORT=8001

# Provider Configuration (헥사고날 아키텍처)
FIGURE_LLM_PROVIDER=claude
FIGURE_EMBEDDING_PROVIDER=gemini

# Anthropic Claude API (현재 기본 LLM 프로바이더)
FIGURE_CLAUDE_API_KEY=your-claude-api-key-here
FIGURE_CLAUDE_MODEL=claude-3-5-sonnet-20241022
FIGURE_CLAUDE_MAX_TOKENS=4096
FIGURE_CLAUDE_TEMPERATURE=0.1

# Google Gemini API (임베딩 프로바이더)
FIGURE_GEMINI_API_KEY=your-gemini-api-key-here
FIGURE_GEMINI_MODEL=gemini-1.5-flash
FIGURE_GEMINI_EMBEDDING_MODEL=models/text-embedding-004
FIGURE_GEMINI_MAX_TOKENS=2048
FIGURE_GEMINI_TEMPERATURE=0.1

# Groq API (선택사항)
FIGURE_GROQ_API_KEY=your-groq-api-key-here
FIGURE_GROQ_MODEL=llama3-8b-8192

# OpenAI API (선택사항)
FIGURE_OPENAI_API_KEY=your-openai-api-key-here
FIGURE_OPENAI_MODEL=gpt-4o-mini
FIGURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-large
FIGURE_OPENAI_MAX_TOKENS=4096
FIGURE_OPENAI_TEMPERATURE=0.1

# Voyage AI API (선택사항)
FIGURE_VOYAGE_API_KEY=your-voyage-api-key-here
FIGURE_VOYAGE_EMBEDDING_MODEL=voyage-3-large

# Storage Configuration
FIGURE_STORAGE_PROVIDER=local
FIGURE_LOCAL_STORAGE_PATH=./storage

# Database Configuration
FIGURE_DATABASE_URL=sqlite:///./data/figure.db

# ChromaDB Configuration
FIGURE_CHROMA_PERSIST_DIRECTORY=/app/data/chroma
FIGURE_CHROMA_COLLECTION_NAME=figure_documents

# JIRA Configuration (선택사항)
FIGURE_JIRA_SERVER=https://your-company.atlassian.net
FIGURE_JIRA_EMAIL=your-email@company.com
FIGURE_JIRA_API_TOKEN=your-jira-api-token

# Redis Configuration (선택사항)
FIGURE_REDIS_URL=redis://localhost:6379 